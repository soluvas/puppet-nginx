#        index     <%= index %>; ## Allow a static html file to be shown first
#        try_files $uri $uri/ @commerce; ## If missing pass the URI to Magento's front handler
#    }
#    handler @commerce {
#        proxy_pass                      <%= appserver_uri %><%= tenant_id %>_<%= tenant_env %>_commerce/;
#        proxy_set_header                X-Real-IP $remote_addr;
#        proxy_set_header                X-Forwarded-For $proxy_add_x_forwarded_for;
#        proxy_set_header                Host $http_host;
#    }
 
    # TODO: Facebook Store View

    location ~ /\. {
        deny  all;
    }

	location /api/ {
        proxy_pass                      <%= appserver_uri %><%= tenant_id %>_<%= tenant_env %>_commerce/api/;
        proxy_set_header                X-Real-IP $remote_addr;
        proxy_set_header                X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header                Host $http_host;
	}

<% if include  != '' -%>
<%include.each do |inc| %>
    include <%= inc %>;
<% end -%>
<% end -%>
}

