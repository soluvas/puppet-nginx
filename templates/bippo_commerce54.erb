#        proxy_set_header                X-Forwarded-For $proxy_add_x_forwarded_for;
#        proxy_set_header                Host $http_host;
#    }
 
    # TODO: Facebook Store View

    location ~ /\. {
        deny  all;
    }

<% if write_user != '' -%>
            auth_basic            on;
            auth_basic_user_file  sites-htpasswd/<%= name %>.htpasswd;
<% end -%>

<% if include  != '' -%>
<%include.each do |inc| %>
    include <%= inc %>;
<% end -%>
<% end -%>
}

